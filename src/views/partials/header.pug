header 
    a(href="/").header_logo 
        i.fab.fa-youtube 
        span Newtube 
            small KR

    form(method="get" action="search")
        input(name="keyword", value=keyword placeholder="Search by title")
        input(type="submit", value="Search now")
    nav 
        ul  
            if loggedIn
                li 
                    a(href="/videos/upload") Video Upload
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.socialOnly 
                            img.header_avatar(src=loggedInUser.avatarUrl,crossorigin)
                        else
                            if loggedInUser.defaultAvartar
                                img.header_avatar(src=loggedInUser.avatarUrl,crossorigin)
                            else
                                img.header_avatar(src="/" + loggedInUser.avatarUrl)

                li 
                    a(href="/users/edit") 프로필 수정(Edit Profile)
                li 
                    a(href="/users/logout") Log-Out
                   
            else
                li 
                    a(href="/join") Join
                li 
                    a(href="/login").header_btn Log-in
                

