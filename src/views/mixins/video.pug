mixin video(video)
    a.video-container(href=`/videos/${video.id}`)
        div 
            video.video-mixin__video(src="/"+video.fileUrl style=`background-size:cover;background-position:center;width:300px;height:200px`) 
            img.video-mixin__thumb(src="/"+video.thumbUrl style=`background-size:cover;background-position:center;width:300px;height:200px`)   
        div
            span=video.title
            p=video.description
            ul
                each hashtag in video.hashtags
                    li=hashtag
            div 
                span.videoTime 00 : 00
            if video.owner.socialOnly 
                img.video_owner_avatar(src=video.owner.avatarUrl,crossorigin width="50px", height="50px")
            else
                if video.owner.defaultAvartar
                    img.video_owner_avatar(src=video.owner.avatarUrl,crossorigin width="50px", height="50px")
                else
                    img.video_owner_avatar(src="/" + video.owner.avatarUrl width="50px", height="50px") 
            small Uploaded by #{video.owner.name}
                    
            br
            span 조회수 #{video.meta.views}회
            br
            small=video.createdAt

