extends ../../base

block content
    if errorMessage
        span=errorMessage
    h2 계정 확인
    form(method="post") 
        if loggedInUser.socialOnly
            input( name="email"  placeholder="깃허브 이메일" type="email" required)
        else
            input( name="username"  placeholder="아이디" required)
            input( name="password" placeholder="비밀번호" type="password" required)
            input( name="password2" placeholder="비밀번호 확인" type="password" required)

        input(type="submit" value="Delete Account")
