extends ../base.pug


block content
    div#videoBox(data-id=video._id)
        video(src="/"+video.fileUrl, )
        div#videoControler
            button#play Play 
            button#mute 음소거
            input(type="range", step="0.01" value=0.5 min="0" max="1")#volume
            div 
                span#currentTime 
                span  / 
                span#totalTime 
            div
                input(type="range", step="1" value=0 min="0" )#timeline
            div
                button#fullScreen 전체화면
                a#smallPlayer(href=`/small/${video._id}/`) 소형 플레이어
    
    div.video_data
        h2=video.title
        p=video.description
        span=video.hashtags
        br
        small=video.createdAt
        div 
            small Uploaded by 
                a(href=`/users/${video.owner._id}`) #{video.owner.name}    
        span 조회수 #{video.meta.views}회
        
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &#10132;
            br
            a(href=`${video.id}/delete`) Delete Video &#10132;	  

    div.video_comment_section
        if loggedIn
            form.video_comment_form#commentForm
                textarea#textInput(placeholder="Write a nice comment...",cols="30",rows="10")
                button Add Comment
        
        div.video_comments
            ul 
                each comment in video.comments.reverse()
                    li.video_comment(data-id=comment._id)
                        span #{comment.text}
                        if String(comment.owner) === String(loggedInUser._id)
                            span.deleteComment ❌ 

block scripts    
    script(src="/ast/js/videoPlayer.js")
    script(src="/ast/js/commentSection.js")

